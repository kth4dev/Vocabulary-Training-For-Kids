<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.appactivity.WritingFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/playground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_true"/>
                <TextView
                    android:id="@+id/tv_fture_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:text="30"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_findicator"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2/10"
                android:padding="@dimen/category_font_size"
                />
            <LinearLayout
                android:background="@color/red"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_false"/>
                <TextView
                    android:id="@+id/tv_ffalse_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:text="30"
                    />
            </LinearLayout>

        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:text="\?"
                    android:textSize="80dp"
                    android:gravity="center"
                    android:id="@+id/iv_mimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/apple"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pan Three"
                    android:textSize="@dimen/category_font_size"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/multiple_choice_btn"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/apple"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/multiple_choice_btn"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/apple"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/multiple_choice_btn"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/iv_three"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/apple"
                    android:scaleType="centerCrop"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/multiple_choice_btn"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/iv_four"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/apple"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>







    </LinearLayout>


</RelativeLayout>
