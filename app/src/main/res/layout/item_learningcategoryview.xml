<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_fruits"
    app:cardCornerRadius="5dp"
    style="@style/category_cardv">
    <LinearLayout
        style="@style/category_inner_linear"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_limg"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:src="@drawable/animals"
            android:background="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_ltitle"
                style="@style/category_name_style"
                android:text="Fruits" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_lmeaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fruits"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/category_font_size"/>
            <LinearLayout

                android:layout_margin="8dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="20dp"
                    android:padding="4dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:src="@drawable/ic_favorite"/>
                <ImageButton
                    android:id="@+id/iv_lsound"
                    android:padding="4dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:src="@drawable/ic_volume"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>