<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp">
        <TextView
            android:id="@+id/tv_categoryname_hs"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:gravity="center_horizontal"
            android:textSize="@dimen/category_font_size"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginRight="2.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writing"
                        android:textSize="17dp"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:background="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_whs"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/category_font_size"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15"/>
                        <RelativeLayout
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:background="@color/white"/>
                        <TextView
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/category_font_size"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="2.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listening"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:background="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_lhs"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/category_font_size"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15"/>
                        <RelativeLayout
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:background="@color/white"/>
                        <TextView
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/category_font_size"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <!--        second row-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginRight="2.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flash Card"
                        android:textSize="17dp"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:background="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_fhs"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/category_font_size"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15"/>
                        <RelativeLayout
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:background="@color/white"/>
                        <TextView
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/category_font_size"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="2.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multiple\nChoice"
                        android:textSize="17dp"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:background="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_mhs"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/category_font_size"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15"/>
                        <RelativeLayout
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:background="@color/white"/>
                        <TextView
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/category_font_size"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
</LinearLayout>