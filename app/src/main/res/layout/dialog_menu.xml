<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_radius"
        android:text="Choose One"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <RelativeLayout
        android:id="@+id/column"
        android:layout_below="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="80dp"/>
        <RelativeLayout
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"/>

    </RelativeLayout>
   <LinearLayout
       android:layout_below="@+id/column"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/colorPrimary"
       android:padding="15dp"
       android:orientation="vertical"
       >
       <androidx.cardview.widget.CardView
            android:id="@+id/btn_learning"
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="50dp">
          <LinearLayout
              android:paddingLeft="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">
              <ImageView
                  android:layout_gravity="center"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:src="@drawable/i_learning"/>
              <TextView
                  android:layout_gravity="center"
                  android:layout_marginLeft="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Learning"
                  android:textColor="@color/black"
                  android:textSize="20dp"/>
          </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/btn_writing"
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="40dp">
           <LinearLayout
               android:paddingLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">
               <ImageView
                   android:padding="5dp"
                   android:layout_gravity="center"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/ic_writing"/>
               <TextView
                   android:textColor="@color/black"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Writing"
                   android:textSize="20dp"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/btn_listening"
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="40dp">
           <LinearLayout
               android:paddingLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">
               <ImageView
                   android:padding="5dp"
                   android:layout_gravity="center"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/ic_listening"/>
               <TextView
                   android:textColor="@color/black"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Listening"
                   android:textSize="20dp"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="40dp">
           <LinearLayout
               android:paddingLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">
               <ImageView
                   android:padding="5dp"
                   android:layout_gravity="center"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/ic_flashcard"/>
               <TextView
                   android:textColor="@color/black"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Flash Card"
                   android:textSize="20dp"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="40dp">
           <LinearLayout
               android:paddingLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">
               <ImageView
                    android:padding="3dp"
                   android:layout_gravity="center"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/ic_choices"/>
               <TextView
                   android:textColor="@color/black"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Multiple Choice"
                   android:textSize="20dp"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
   </LinearLayout>
<LinearLayout
    android:layout_width="400dp"
    android:layout_height="wrap_content"/>
</RelativeLayout>