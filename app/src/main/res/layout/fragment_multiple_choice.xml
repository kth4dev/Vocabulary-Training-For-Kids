<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/playground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_true"/>
                <TextView
                    android:id="@+id/tv_mture_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:text="30"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_mindicator"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2/10"
                android:padding="@dimen/category_font_size"
                />
            <LinearLayout
                android:background="@color/red"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_false"/>
                <TextView
                    android:id="@+id/tv_mfalse_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:text="30"
                    />
            </LinearLayout>

        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/iv_mimg"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/apple"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/iv_mcorrect_symbol"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/correct_symbol"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv_mwrong_symbol"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/wrong_symbol"
                        android:scaleType="centerCrop"
                        />

                </RelativeLayout>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_mmeaning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pan Three"
                    android:textSize="@dimen/category_font_size"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/all_btn_m"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/place_one"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/multiple_choice_btn"
                android:text="apple"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/category_font_size"/>
                <Button
                    android:id="@+id/place_two"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/multiple_choice_btn"
                    android:text="apple"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/category_font_size"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/place_three"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/multiple_choice_btn"
                    android:text="apple"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/category_font_size"/>
                <Button
                    android:id="@+id/place_four"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/multiple_choice_btn"
                    android:text="apple"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/category_font_size"/>
            </LinearLayout>



        </LinearLayout>
        <Button
            android:id="@+id/btn_mnext"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:background="@drawable/corner_radius"
            android:textColor="@color/white"
            android:layout_gravity="center"/>







    </LinearLayout>


</RelativeLayout>