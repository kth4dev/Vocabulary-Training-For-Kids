<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="1dp"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/result"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/result_welcome"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:text="Congragulation"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_finalresult"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:text="Your Score :  "
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trophy"/>
        <TextView
            android:id="@+id/tv_highscore"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:text="Your HighScore :  "
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trophy"/>
        <Button
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:textAllCaps="false"
            android:textSize="@dimen/category_font_size"
            android:background="@drawable/corner_radius"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_gohome"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Back To Home"
            android:textAllCaps="false"
            android:textSize="@dimen/category_font_size"
            android:background="@drawable/corner_radius"
            android:textColor="@color/white"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>